<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Top Outlet: On"
        android:id="@+id/power_on_1_button"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Top Outlet: Off"
        android:id="@+id/power_off_1_button"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Bottom Outlet: On"
        android:id="@+id/power_on_2_button"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Bottom Outlet: Off"
        android:id="@+id/power_off_2_button"/>
</LinearLayout>